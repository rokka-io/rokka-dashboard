{
  "name": "rokka-dashboard-ui-base",
  "version": "0.1.0",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rokka-io/rokka-dashboard.git"
  },
  "dependencies": {
    "@types/react-router-dom": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "styled-components": "^4.1.1",
    "tslib": "^1.9.3"
  },
  "scripts": {
    "start": "start-storybook -p 9001 -c ./config/storybook",
    "build": "npm run clean && tsc -p ./tsconfig.build.json && npm run build:copy-files",
    "build:copy-files": "cp -R ./src/identity/typography/fonts ./lib/identity/typography",
    "clean": "rm -Rf ./lib",
    "prettier": "prettier --config ../../.prettierrc 'src/**/*.{ts,tsx}'",
    "lint": "npm run lint:ts && npm run lint:sc",
    "lint:ts": "tslint -c ../../tslint.json 'src/**/*.{ts,tsx}' -t stylish",
    "lint:sc": "stylelint 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@rebass/grid": "^6.0.0-4",
    "@storybook/addon-actions": "^4.0.12",
    "@storybook/addon-info": "^4.0.12",
    "@storybook/addon-knobs": "^4.0.12",
    "@storybook/addon-links": "^4.0.12",
    "@storybook/addon-options": "^4.0.12",
    "@storybook/addons": "^4.0.12",
    "@storybook/react": "^4.0.12",
    "@types/react-test-renderer": "^16.0.3",
    "@types/rebass__grid": "^6.0.1",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-info": "^3.4.2",
    "@types/storybook__addon-knobs": "^3.4.1",
    "@types/storybook__addon-options": "^4.0.0",
    "@types/storybook__react": "^4.0.0",
    "cache-loader": "^1.2.5",
    "fork-ts-checker-webpack-plugin": "^0.5.0",
    "normalize.css": "^8.0.1",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-test-renderer": "^16.7.0",
    "thread-loader": "^1.2.0"
  }
}
